#задание 4
def my_func(x, y):
     return x**y
x = int(input("Введите число:"))
y = int(input("Введите отрицательное число:"))
print(my_func(x, y))

#задание 5
def my_sum ():
    sum_res = 0
    out = False
    while out == False:
        number = input('Введите числа или Q для выхода: ').split()

        result = 0
        for el in range(len(number)):
            if number[el] == 'Q':
                out = True
                break
            else:
                result = result + int(number[el])
        sum_res = sum_res + result
        print(f'Сумма  {sum_res}')
    print(f'Конечный результат {sum_res}')


my_sum()
